@model Hobby

<div class="container mt-4">
    <h3>
        Create a Hobby
    </h3>
    <form asp-action="Create" asp-controller="Hobbies" method="POST">            
        <div class="row">
            <div class="col">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <span 
                            class="text-danger font-weight-bold"
                            asp-validation-for="Name"
                        ></span>
                        <input class="form-control" asp-for="Name" />
                    </div>
                    <div class="form-group row">
                        <label asp-for="Body" class="col-sm-2 col-form-label">
                            <span asp-validation-for="Body" class="text-danger font-weight-bold"></span>
                        </label>
                        <div class="col-sm-10">
                            <textarea asp-for="Body" class="form-control" rows="10" placeholder="Post something witty here..."></textarea>
                        </div>
                    </div>
                    <div class="col">
                        <div class="text-center inline">
                            <a asp-controller="Hobbies" asp-action="Dashboard" class="btn btn-primary">Cancel</a>
                            <button class="btn btn-success mt-100">Create</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>